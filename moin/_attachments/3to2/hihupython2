def main():
        s = input ('Please enter your name:')
        i = input ('Hi:')
        while (i != 'Hi'):        # condition states while i is not 'Hi'
                input ('Hi:')     # input the word 'Hi'.
                i = input ('Hi:') # this increment ensures that the code will loop
        print('Hello There')      # once the condition is met, it will print
                                  # 'Hello World'
               
if __name__ == "__main__": main()


